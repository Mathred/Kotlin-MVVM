<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/movieCastFragment_RV_item_photo"
        android:layout_width="50dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_movie_24"
        android:background="@color/purple_700"/>

    <TextView
        android:id="@+id/movieCastFragment_RV_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/full_names"
        app:layout_constraintStart_toEndOf="@id/movieCastFragment_RV_item_photo"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/movieCastFragment_RV_item_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/full_names"
        app:layout_constraintStart_toEndOf="@id/movieCastFragment_RV_item_photo"
        app:layout_constraintTop_toBottomOf="@id/movieCastFragment_RV_item_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>
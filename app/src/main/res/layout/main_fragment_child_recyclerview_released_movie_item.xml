<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/mainFragment_child_RV_CV_layout_width"
    android:layout_height="@dimen/mainFragment_child_RV_CV_layout_height"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/mainFragment_child_RV_CV_cornerRadius"
    app:cardElevation="@dimen/mainFragment_child_RV_CV_elevation"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mainFragment_child_RV_CV_IV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mainFragment_child_RV_CV_IV_height"
            android:src="@drawable/ic_baseline_movie_24"
            tools:background="@color/purple_700"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/mainFragment_child_RV_CV_movieName_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mainFragment_child_RV_CV_movieName_TV_marginStart"
            android:textSize="@dimen/mainFragment_child_RV_CV_movieName_TV_textSize"
            tools:text="Movie name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mainFragment_child_RV_CV_yearReleased_TV"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mainFragment_child_RV_CV_yearReleased_TV_marginStart"
                tools:text="2020"
                android:textSize="@dimen/mainFragment_child_RV_CV_yearReleased_TV_textSize" />

            <ImageView
                android:layout_width="@dimen/mainFragment_child_RV_CV_rateStar_width"
                android:layout_height="@dimen/mainFragment_child_RV_CV_rateStar_height"
                android:src="@drawable/ic_baseline_star_rate_24"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/mainFragment_child_RV_CV_movieRating_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/mainFragment_child_RV_CV_movieRating_TV_marginEnd"
                tools:text="77"
                android:textSize="@dimen/mainFragment_child_RV_CV_movieRating_TV_textSize" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>